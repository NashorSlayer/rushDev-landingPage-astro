---
const services = [
    {
        name: "Desarrollo Web",
        description: 
            "Creamos sitios web creativos, personalizados, optimizados y modernos. Nuestros diseñadores web utilizan las últimas tecnologías para desarrollar tu sitio web profesional. Ofrecemos páginas web dinámicas que se actualizan en minutos, mejorando así la experiencia del usuario.",
        features: [
            "Diseño Responsivo",
            "Optimización SEO",
            "Integración de CMS",
            "Creatividad y Personalización",
            "Tecnologías Modernas",
            "Actualizaciones Rápidas",
            "Experiencia de Usuario Mejorada"
        ],


    },
    {
        name: "Desarrollo de Aplicaciones",
        description:
            "Desarrollamos aplicaciones móviles y de escritorio con interfaces intuitivas y funcionalidades robustas. Nuestro enfoque incluye:",
        // icon: "/icons/app-development.svg",
        features: [
            "Aplicaciones Nativas",
            "Desarrollo Cross-Platform",
            "Soporte y Mantenimiento",
        ],
    },
    {
        name: "Consultoría en UX/UI",
        description:
            "Ofrecemos consultoría para mejorar la experiencia del usuario y el diseño de interfaces en tus proyectos. Nuestros servicios incluyen:",
        // icon: "/icons/ux-ui.svg",
        features: [
            "Auditoría de Usabilidad",
            "Prototipos Interactivos",
            "Diseño de Interfaces",
        ],
    },
    {
        name: "SEO y Marketing Digital",
        description:
            "Optimización para motores de búsqueda y estrategias de marketing digital para aumentar la visibilidad de tu negocio.",
        // icon: "/icons/seo-marketing.svg",
        features: [
            "Estrategias SEO Personalizadas",
            "Campañas PPC",
            "Análisis de Competencia",
        ],
    },
];
---

<section class="services">
    <h1>Nuestros Servicios</h1>
    <div class="services-list">
        {
            services.map((service) => (
                <div class="service-item">
                    {/* <img src={service.icon} alt={service.name} class="service-icon" /> */}
                    <h2>{service.name}</h2>
                    <p>{service.description}</p>
                    <ul class="service-features">
                        {service.features.map((feature) => (
                            <li>{feature}</li>
                        ))}
                    </ul>
                </div>
            ))
        }
    </div>
</section>

<style>
    .services {
        padding: 2rem;
    }

    .services-list {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .service-item {
        flex: 1 1 calc(50% - 1rem);

        border-radius: 8px;
        padding: 1rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .service-item h3 {
        margin-top: 0.5rem;
    }

    .service-icon {
        width: 40px;
        height: 40px;
        margin-bottom: 1rem;
    }

    .service-price {
        font-weight: bold;
        margin-top: 0.5rem;
    }

    .service-features {
        list-style-type: disc;
        margin: 0.5rem 0;
        padding-left: 1rem;
    }

    @media (max-width: 600px) {
        .service-item {
            flex: 1 1 100%;
        }
    }
</style>
