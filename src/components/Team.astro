---
import { teamMembers } from './Profile.astro';
---

<section class="team bg-purple-800 text-white py-10">
  <div class="container mx-auto">
    <h2 class="text-3xl font-bold mb-6 text-center">Conoce nuestro equipo</h2>
    <div class="relative flex justify-center items-center overflow-hidden" style="height: 700px;">
      {teamMembers.map((member, index) => (
        <div
          class={`team-member ${index === 0 ? 'main-card' : 'secondary-card'}`}
          data-index={index}
          style={{ zIndex: index === 0 ? 3 : 2 }}
        >
          <div class="team-content">
            <div class="photo-placeholder bg-white rounded-lg overflow-hidden">
              <img src={member.image} alt={member.name} class="h-full w-full object-cover rounded-lg" />
            </div>
            <div class="text-content flex-1 flex flex-col justify-center text-center px-4">
              <h3 class="text-xl font-semibold mb-2">{member.name}</h3>
              <p class="mb-0 text-base">{member.description}</p>
            </div>
            <div class="social-links flex flex-col justify-center items-center mt-4">
              <a href={member.linkedin} target="_blank" aria-label="LinkedIn" class="mb-6">
                <img
                  src="https://upload.wikimedia.org/wikipedia/commons/thumb/8/81/LinkedIn_icon.svg/1200px-LinkedIn_icon.svg.png"
                  alt="LinkedIn"
                  class="w-12 h-12 transition-transform duration-300 ease-in-out transform hover:scale-125"
                />
              </a>
              {member.github && (
                <a href={member.github} target="_blank" aria-label="GitHub" class="mb-6">
                  <img
                    src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/ae/Github-desktop-logo-symbol.svg/2048px-Github-desktop-logo-symbol.svg.png"
                    alt="GitHub"
                    class="w-15 h-14 transition-transform duration-300 ease-in-out transform hover:scale-125"
                  />
                </a>
              )}
            </div>
          </div>
        </div>
      ))}
      <button id="prevButton" class="absolute left-0 top-1/2 transform -translate-y-1/2 bg-transparent p-2 rounded-full shadow-lg hover:bg-[#7A1CAC] transition">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-arrow-badge-left" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ffffff" fill="bg-black" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
          <path d="M11 17h6l-4 -5l4 -5h-6l-4 5z" />
        </svg>
      </button>
      
      <button id="nextButton" class="absolute right-0 top-1/2 transform -translate-y-1/2 bg-transparent p-2 rounded-full shadow-lg hover:bg-[#7A1CAC] transition">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-arrow-badge-right" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ffffff" fill="bg-black" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
          <path d="M13 7h-6l4 5l-4 5h6l4 -5z" />
        </svg>
      </button>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const teamMembers = Array.from(document.querySelectorAll('.team-member')) as HTMLElement[];
    let currentIndex = 0;
    const totalMembers = teamMembers.length;

    function updateDisplay() {
      teamMembers.forEach((member, index) => {
        if (index === currentIndex) {
          member.style.transform = 'translateY(0) scale(1.1)';
          member.style.zIndex = '3';
          member.style.opacity = '1';
        } else if (index === (currentIndex + 1) % totalMembers) {
          member.style.transform = 'translateY(-260px) scale(0.7)';
          member.style.zIndex = '3';
          member.style.opacity = '1';
        } else if (index === (currentIndex - 1 + totalMembers) % totalMembers) {
          member.style.transform = 'translateY(260px) scale(0.7)';
          member.style.zIndex = '2';
          member.style.opacity = '1';
        } else {
          member.style.transform = 'scale(0.5)';
          member.style.zIndex = '1';
          member.style.opacity = '0';
        }
      });
    }

    function showNextMember() {
      currentIndex = (currentIndex + 1) % totalMembers;
      updateDisplay();
    }

    function showPrevMember() {
      currentIndex = (currentIndex - 1 + totalMembers) % totalMembers;
      updateDisplay();
    }

    document.getElementById('nextButton')?.addEventListener('click', showNextMember);
    document.getElementById('prevButton')?.addEventListener('click', showPrevMember);
    
    updateDisplay();
  });
</script>

<style>
  .team-member {
    position: absolute;
    width: 60%;
    max-width: 100vw;
    height: auto; 
    border: 3px solid white; 
    border-radius: 8px;
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.7)); /* Fondo con gradiente */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    opacity: 1; 
    pointer-events: auto;
    transition: transform 0.7s ease-in-out, opacity 0.7s ease-in-out, z-index 0s ease-in-out;
  }

  .main-card {
    width: 80%;
    height: 250px;
  }

  .secondary-card {
    width: 80%;
    height: 250px;
    border: 2px solid white; 
    opacity: 1; 
  }

  .photo-placeholder {
    background-color: #ffffff;
    flex-shrink: 0;
    margin-right: 16px;
    transition: height 0.5s ease-in-out, width 0.5s ease-in-out;
  }

  .main-card .photo-placeholder {
    height: 200px;
    width: 200px;
  }

  .secondary-card .photo-placeholder {
    height: 200px;
    width: 200px;
  }

  .team-content {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 100%;
    padding: 20px;
    box-sizing: border-box;
  }

  .text-content {
    
    flex: 1;
  }

  .social-links {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  @media (max-width: 768px) {
    .team-member {
      flex-direction: column;
      text-align: center;
      padding: 15px;
      height: auto;
    }

    .photo-placeholder {
      margin-right: 0;
      margin-bottom: 10px;
      height: 120px;
      width: 120px;
    }

    .main-card .photo-placeholder {
      height: 150px;
      width: 150px;
    }

    .secondary-card .photo-placeholder {
      height: 100px;
      width: 100px;
    }

    .social-links {
      margin-left: 0;
      margin-top: 10px;
    }

    .team-member h3 {
      font-size: 1.1rem;
      margin-bottom: 10px;
    }

    .team-member p {
      font-size: 0.85rem;
    }
  }
</style>
